<h1> <%= @cocktail.name %> </h1>
<% @cocktail.doses.each do |dose| %>
  <%= dose.description %>
  <%= dose.ingredient.name %>
  <%= link_to "Delete this ingredient",
              dose_path(dose.id),
              method: :delete,
              data: { confirm: "Are you sure?" } %>
<% end %>
<br>
<%= link_to "Add an ingredient", new_cocktail_dose_path(@cocktail) %>
<%= link_to "Back to list", cocktails_path %>
