<!-- COCKTAILS -->
<div class="container">
  <div class="row">
    <div class="col-12">
      <% @cocktails.each do |cocktail| %>
        <div class="card-cocktail text-center">
          <% if cocktail.photo.present? %>
            <%= cl_image_tag cocktail.photo.key, height: 200, width: 300, crop: :fill %>
          <% end %>
          <h3> <%= link_to cocktail.name, cocktail_path(cocktail.id) %> </h3>
        </div>
      <% end %>
    </div>
  </div>
</div>

